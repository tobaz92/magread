name: Run Tests

on:
  workflow_run:
    workflows: ["Install Dependencies"]
    types:
      - completed

jobs:
  test:
    runs-on: ubuntu-latest

    steps:
      - name: Checkout code
        uses: actions/checkout@v3

      - name: Set up Node.js
        uses: actions/setup-node@v3
        with:
          node-version: "22.9.0"

      - name: Run tests
        env:
          MONGO_URL: ${{ env.MONGO_URL }}
          DATABASE_NAME: "magread"
          SESSION_SECRET: "secret"
          TOKEN_SECRET: "secret"
        run: npm test
